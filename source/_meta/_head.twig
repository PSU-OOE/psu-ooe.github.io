<!DOCTYPE html>
<html class="{{ htmlClass }}">
  <head>
    <title>{{ title }}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,600i,700,700i,800|Roboto+Slab:300,400,700|Source+Sans+Pro:400">
    {% include '@global/webfonts/webfonts.twig' with { base_directory: '/webfonts'} %}

    <!-- Begin Pattern Lab (Required for Pattern Lab to run properly) -->
    {{ patternLabHead | raw }}
    <!-- End Pattern Lab -->

    {% for stylesheet in get_component_stylesheets() %}
      <link rel="stylesheet" href="../../{{ stylesheet }}" />
    {% endfor %}
  </head>
  <body class="{{ bodyClass }}">
